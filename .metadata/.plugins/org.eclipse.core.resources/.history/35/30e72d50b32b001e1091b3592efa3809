package EzyBill.GenericUtility;

import java.io.FileInputStream;


import org.apache.poi.ss.usermodel.WorkbookFactory;
import org.openqa.selenium.WebDriver;

public class ExcelFileUtility {

	public String readDataFromExcelSheet(WebDriver driver, String SheetName,int row, int cell) throws Throwable
	{
		FileInputStream fis=new FileInputStream(IConstantUtility.excelFilePath);
		return WorkbookFactory.create(fis).getSheet(SheetName).getRow(row).getCell(cell).getStringCellValue();
	}
	public double readIntegerDataFromExcelSheet(WebDriver driver, String SheetName,int row, int cell) throws Throwable
	{
		FileInputStream fis=new FileInputStream(IConstantUtility.createLCOExcelFilePath);
		return WorkbookFactory.create(fis).getSheet(SheetName).getRow(row).getCell(cell).getNumericCellValue();
	}
	
	public String readDataFromExcelSheet1(WebDriver driver, String SheetName,int row, int cell) throws Throwable
	{
		FileInputStream fis=new FileInputStream(IConstantUtility.createLCOExcelFilePath);
		return WorkbookFactory.create(fis).getSheet(SheetName).getRow(row).getCell(cell).getStringCellValue();
	}
	public double readIntegerDataFromExcelSheet1(WebDriver driver, String SheetName,int row, int cell) throws Throwable
	{
		FileInputStream fis=new FileInputStream(IConstantUtility.excelFilePath);
		return WorkbookFactory.create(fis).getSheet(SheetName).getRow(row).getCell(cell).getNumericCellValue();
	}
}
